{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Python (Active File) via .venv",
      "type": "shell",
      "command": "${workspaceFolder}/.venv/bin/python",
      "windows": {
        "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe"
      },
      "linux": {
        "command": "${workspaceFolder}/.venv/bin/python"
      },
      "osx": {
        "command": "${workspaceFolder}/.venv/bin/python"
      },
      "args": ["${file}"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
